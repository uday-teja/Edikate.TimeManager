<Controls:MetroWindow x:Class="Edikate.PayrollManager.Host.ShellView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:ekc="clr-namespace:Edikate.PayrollManager.App.Controls;assembly=Edikate.PayrollManager.App"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen">
    <Controls:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="Edikate Payroll Manager" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="12"/>
        </DataTemplate>
    </Controls:MetroWindow.TitleTemplate>

    <Grid x:Name="RootShellGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="LeftNavigatorViewModel"/>
        <ekc:EdikateContentControl Grid.Column="1" x:Name="ActiveItem" CurrentItem="{Binding ActiveItem}"/>
    </Grid>
</Controls:MetroWindow>